<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Testing.AddStudentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Adding new student"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="entryFirstName" Placeholder="Imię" />
            <Entry x:Name="entryLastName" Placeholder="Nazwisko" />
            <Entry x:Name="entryAlbum" Placeholder="Numer albumu" />
            <Button Text="Zapisz" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>