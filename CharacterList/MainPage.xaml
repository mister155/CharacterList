             xmlns:local="clr-namespace:CharacterList"
             x:Class="CharacterList.MainPage">

    <ScrollView>
        <StackLayout>
            <Image Source="logo.jpg" Aspect="AspectFit"/>

            <Button
            Text="Check and characters"
            Clicked="Button_Clicked"
