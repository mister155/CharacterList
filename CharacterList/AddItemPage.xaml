<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CharacterList.AddItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Adding new item"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="EntryItemName" Placeholder="Item name" />
            <Picker x:Name="EntryItemType" Title="Item Type">
                <Picker.Items>
                    <x:String>Weapon</x:String>
                    <x:String>Armor</x:String>
                    <x:String>Item</x:String>
                    <x:String>Other</x:String>
                </Picker.Items>
            </Picker>
            <Entry x:Name="EntrySpecialTraits" Placeholder="Special traits" />
            <Entry x:Name="EntryDescription" Placeholder="Description" />
            <Button Text="Save" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>