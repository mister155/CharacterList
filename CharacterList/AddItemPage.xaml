<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CharacterList.AddItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Adding new item"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="EntryItemName" Placeholder="Item name" />
            <Entry x:Name="EntryItemType" Placeholder="Item type" />
            <Entry x:Name="EntrySpecialTraits" Placeholder="Special traits" />
            <Entry x:Name="EntryDescription" Placeholder="Description" />
            <Button Text="Zapisz" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>